# =============================================================================
# ElliotOS Configuration
# =============================================================================

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# =============================================================================
# Google APIs
# =============================================================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8080/callback

# Gmail - comma-separated for multiple accounts
GMAIL_ACCOUNTS=account1@gmail.com,account2@gmail.com

# =============================================================================
# Slack Configuration
# =============================================================================
# Bot tokens for multiple workspaces (comma-separated)
SLACK_BOT_TOKENS=xoxb-your-bot-token-1,xoxb-your-bot-token-2

# User tokens for reading (comma-separated)
SLACK_USER_TOKENS=xoxp-your-user-token-1,xoxp-your-user-token-2

# Webhook URL for posting summaries
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Channel for posting summaries
SLACK_SUMMARY_CHANNEL=#elliot-daily

# =============================================================================
# Health & Fitness
# =============================================================================
MYFITNESSPAL_EMAIL=your_email@example.com
MYFITNESSPAL_PASSWORD=your_password

# Apple Health (uses HealthKit API - no credentials needed)
APPLE_HEALTH_ENABLED=true

# =============================================================================
# News & Sports
# =============================================================================
NEWS_API_KEY=your_newsapi_key_here
CHELSEA_FC_ENABLED=true
FOOTBALL_API_KEY=your_football_api_key  # Optional: for more detailed stats

# =============================================================================
# Backup LLM Options (Optional)
# =============================================================================
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# =============================================================================
# Scheduling
# =============================================================================
MORNING_DIGEST_TIME=07:00
EVENING_DIGEST_TIME=21:00
TIMEZONE=America/New_York

# =============================================================================
# Advanced Features
# =============================================================================
# GitHub for productivity tracking
GITHUB_TOKEN=your_github_token
GITHUB_USERNAME=your_username

# Readwise for learning reminders
READWISE_TOKEN=your_readwise_token

# Notion for OKR tracking
NOTION_TOKEN=your_notion_token
NOTION_DATABASE_ID=your_okr_database_id

# =============================================================================
# Application Settings
# =============================================================================
LOG_LEVEL=INFO
DATA_RETENTION_DAYS=30
ENABLE_ANALYTICS=true
ENABLE_WEB_DASHBOARD=false

# macOS Permissions (automatically handled)
MACOS_SCREEN_TIME_ENABLED=true
MACOS_APP_USAGE_ENABLED=true 